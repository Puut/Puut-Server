extends layout

block content
  .row
    .small-6.small-centered.columns
      h1 Your Image was uploaded!
  .row
    .large-12.columns.small-centered
      .large-4.columns.small-centered
        input(type='text', value=id, onfocus="this.select()", onMouseUp="return false", id="url")
  script.
    $("#url").val(window.location.origin+ "/"+$("#url").val()+".png")
    $("#url").focus();